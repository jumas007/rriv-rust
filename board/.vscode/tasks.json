{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RRIV: X-Compile Board",
            "type": "cargo",
            "command": "build",
            "args": [
                "--target",
                "thumbv7m-none-eabi",
                "--manifest-path",
                "${workspaceFolder}/Cargo.toml",
                "-p=rriv-0-4"
            ],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}