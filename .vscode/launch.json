{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'control_interface'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=control_interface"
                ],
                "filter": {
                    "name": "control_interface",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Compile package for RRIV board 0.4",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path",
                    "${workspaceFolder}/board/Cargo.toml",
                    "-p=rriv-0-4"
                ],
                "filter": {
                    "name": "RRIV board 0.4",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/board/",
            "sourceLanguages": [
                "rust"
            ]
        }
    ],
}